# VoltEdge Production Environment Configuration

# Container Registry
REGISTRY=ghcr.io
IMAGE_NAME=voltedge

# Database Configuration (use strong passwords in production)
COCKROACH_PASSWORD=production_voltedge_password_change_me
DATABASE_HOST=cockroachdb
DATABASE_PORT=26257
DATABASE_USER=voltedge
DATABASE_NAME=voltedge

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
LOG_LEVEL=info

# Monitoring
GRAFANA_PASSWORD=production_admin_password_change_me
PROMETHEUS_RETENTION=30d

# Security
JWT_SECRET=production_jwt_secret_key_change_in_production
ENABLE_HTTPS=true

# Performance
MAX_CONCURRENT_SIMULATIONS=100
SIMULATION_TIMEOUT=10m
